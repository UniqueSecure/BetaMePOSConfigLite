<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/linear_welcome"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/meposconfig8"
    android:gravity="center_vertical|center_horizontal"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center_vertical|center_horizontal"
        android:orientation="vertical">

        <TextView
            android:id="@+id/lblHello"
            style="@style/setUpTitlesWhite"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingBottom="10dp"
            android:text="@string/hello"
            android:textSize="@dimen/text_size60" />

        <TextView
            android:id="@+id/lblSubTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/tap_to_connect"
            android:textColor="@android:color/white"
            android:textSize="@dimen/text_size20" />

        <Space
            android:layout_width="wrap_content"
            android:layout_height="@dimen/space20" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/img_circle"
                android:layout_width="350dp"
                android:layout_height="350dp"
                android:layout_centerInParent="true"
                android:src="@drawable/ic_spininng_circle" />

            <Button
                android:id="@+id/btnconnect"
                android:layout_width="135dp"
                android:layout_height="135dp"
                android:layout_centerInParent="true"
                android:background="@drawable/ic_brightness_1_black_24dp"
                android:text="@string/next"
                android:textColor="@color/colorAccent"
                android:textSize="@dimen/text_size20" />

        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="end"
        android:orientation="vertical">

        <TextView
            android:id="@+id/versionName"
            style="@style/versionTxt"
            android:text="@string/version_txt"/>
    </LinearLayout>


</LinearLayout>
