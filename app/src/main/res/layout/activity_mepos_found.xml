<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/meposconfig5"
    android:gravity="center_vertical|center_horizontal"
    android:orientation="vertical">

<ImageView
    android:id="@+id/image_mepos"
    android:layout_width="400dp"
    android:layout_height="250dp"
    android:scaleType="fitXY"
    android:src="@drawable/ic_decorativembublack"/>

    <Space
        android:layout_width="wrap_content"
        android:layout_height="@dimen/space35" />

    <TextView
        android:id="@+id/lblMePOSFound"
        style="@style/setUpTextGray"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/mepos_found_lbl"
        android:textSize="@dimen/text_size25"
        android:textStyle="bold" />
    <Space
        android:layout_width="wrap_content"
        android:layout_height="@dimen/space35" />
    <Button
        android:id="@+id/btnconnect"
        android:layout_width="@dimen/button_width200"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/colorAccent"
        android:text="@string/connect"
        android:textColor="@android:color/white"
        android:textSize="@dimen/text_size35"
        android:textAllCaps="true"
        android:visibility="visible" />

</LinearLayout>
