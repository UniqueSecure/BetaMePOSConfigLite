<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="launcherTheme" parent="AppTheme.NoActionBar">
        <item name="android:windowBackground">@drawable/launch_screen</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="setUpTitlesWhite">
        <item name="android:textSize">@dimen/text_size55</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="setUpTitlesBlack">
        <item name="android:textSize">@dimen/text_size55</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="setUpTextGray">
        <item name="android:textSize">@dimen/text_size25</item>
        <item name="android:textColor">@android:color/darker_gray</item>
    </style>

    <style name="setUpTextWhite">
        <item name="android:textSize">@dimen/text_size25</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="backbtns">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@null</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textSize">@dimen/text_size25</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:paddingBottom">@dimen/padding20</item>
        <item name="android:paddingStart">@dimen/padding30</item>
        <item name="android:gravity">start</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="nextBtns">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@null</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textSize">@dimen/text_size25</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:paddingBottom">@dimen/padding20</item>
        <item name="android:paddingEnd">@dimen/padding30</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">end</item>
    </style>

    <style name="subTxt">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">60sp</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="subTxtBlack">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">60sp</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="generalLblTxt">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/text_size20</item>
        <item name="android:textColor">@android:color/white</item>

    </style>

    <style name="generalLblTxtBlack">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/text_size20</item>
        <item name="android:textColor">@android:color/black</item>

    </style>


    <style name="generalHintTxt">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/text_size20</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textColorHint">@android:color/darker_gray</item>
    </style>

    <style name="Spinner" parent="Widget.AppCompat.Light.DropDownItem.Spinner">
        <item name="android:textColor">@android:color/darker_gray</item>
    </style>

    <style name="buttonspersonalise" parent="@style/Widget.AppCompat.Button.Colored">
        <item name="android:layout_width">190dp</item>
        <item name="android:layout_height">190dp</item>
        <item name="android:background">@null</item>
        <item name="android:scaleType">fitCenter</item>
        <item name="android:src">@drawable/ic_brightness_1_black_24dp</item>
    </style>


</resources>
